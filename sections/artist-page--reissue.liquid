<div class="section-title">
    <h2>{{ section.settings.title }}</h2>
</div>

<ul>
    {% for coll in collections %}
        {% case coll.template_suffix %}
            {% when 'artist' %}

                {% case coll.metafields.custom.reissue_status %}
                    {% when true %}
                        <li class="artist-card">
                            <div class="artist-card-wrapper">

                                <div onclick="window.location='{{ coll.url }}';" class="image" style="background: url('{{ coll.image | image_url: width: '500' }}'); background-size: cover; background-position: center center;">
                                </div>

                                <div class="data">
                                    <h3>
                                        <a href="{{ coll.url }}" title="{{ coll.title }}">
                                            {{ coll.title }}
                                        </a>
                                    </h3>
                                </div>
                            </div>
                        </li>
                {% endcase %}
        {% endcase %}
    {% endfor %}
</ul>


{% schema %}
    {
      "name": "Re-issues",
      "tag": "div",
      "class": "reissues",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Section Title",
          "default": "Re-Issues"
        }
      ],
      "presets": [
        {
          "name": "Re-issues",
          "settings": {
            "title": "Re-issues"
          }
        }
      ],
      "enabled_on": {
        "templates": ["page"]
      }
    }
{% endschema %}