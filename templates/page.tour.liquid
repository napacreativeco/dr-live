{{ 'page--tour-dates.css' | asset_url | stylesheet_tag }}

<div class="tour-page">
    <div class="tour-page-wrapper">

        {% section 'tour-page--hero' %}
        
        <div class="tour-dates-container">
            <div class="tour-dates-wrapper">
                <ul class="tour-dates-list">

                    {% for coll in collections %}
                        {% case coll.template_suffix %}
                            {% when 'artist' %}
                    
                            {% if coll.metafields.artist.tour_dates.value != blank %}
                                
                                <li class="tour-block">

                                    <div class="image" style="background: url('{{ coll.image | image_url: width: '700' }}'); background-size: cover; background-position: center center;">
                                        &nbsp;
                                    </div>

                                    <div class="artist">
                                        <a href="{{ coll.url }}" title="{{ coll.title }}">
                                            <h2>{{ coll.title }}</h2>
                                        </a>                                     
                                    </div>

                                    {% for item in coll.metafields.artist.tour_dates.value %}
                                        <div class="info">

                                            <div class="title">
                                                <h3>{{ item.title }}</h3>
                                            </div>

                                            <div class="dates">
                                                {{ item.dates | metafield_tag }}
                                            </div>

                                            <div class="flier">
                                                <a href="{{ item.flier | image_url }}" title="Flier">Tour Flier</a>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </li>
                            
                            {% endif %}
                        {% endcase %}
                    {% endfor %}

                </ul>
            </div>
        </div>

    </div>
</div>
